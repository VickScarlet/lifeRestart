.wux-selectable {
  position: relative;
  display: inline-block
}
.wux-selectable__input {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  width: 100%;
  height: 100%;
  z-index: 2;
  border: 0 none;
  -webkit-appearance: none;
  -moz-appearance: none;
  appearance: none
}
.wux-selectable__icon {
  display: inline-block;
  font-size: 0;
  vertical-align: middle;
  position: relative;
  top: 0;
  left: 0;
  margin-left: 10rpx;
  margin-right: 10rpx
}